@model IEnumerable<ElectronicStore.Web.Models.NewsCategoryViewModel>

<li class="w3pages">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tin tức <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            var url = "/" + category.Alias + ".nc-" + category.Id;
            <li><a href="@url">@category.Name</a></li>
        }
    </ul>
</li>

