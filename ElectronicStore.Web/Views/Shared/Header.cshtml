@model List<ElectronicStore.Web.Models.CartItemViewModel>
@using Microsoft.AspNet.Identity;
<div class="header" id="home1">
    <div class="container">
        <div class="e_login">
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("SignOut", "Account", FormMethod.Post, new { @id = "formSignOut" }))
                {
                    @Html.AntiForgeryToken()
                    <ul>
                        <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span></li>
                        <li><a href="#" style="text-transform: lowercase">@User.Identity.GetUserName()</a></li> |
                        <li><a href="#" id="btnSignOut">ĐĂNG XUẤT</a></li>
                    </ul>
                }
            }
            else
            {
                <ul>
                    <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span></li>
                    <li><a href="/sign-in"><span> </span>ĐĂNG NHẬP</a></li> |
                    <li><a href="/sign-up">ĐĂNG KÝ</a></li>
                </ul>
            }
        </div>
        <div class="w3l_logo">
            <h1><a href="/">Electronic Store<span>Your stores. Your place.</span></a></h1>
        </div>
        <div class="search">
            <input class="search_box" type="checkbox" id="search_box">
            <label class="icon-search" for="search_box"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></label>
            <div class="search_form">
                <form action="/search" method="get">
                    <input type="text" name="keyword" id="txtKeyword" placeholder="Nhập vào tên sản phẩm...">
                    <input type="submit" value="Tìm">
                </form>
            </div>
        </div>
        <div class="cart cart box_1">
            <form action="/shopping-cart" method="post">
                <button class="w3view-cart" type="submit"><i class="fa fa-cart-arrow-down"></i></button> 
            </form>
        </div>
    </div>
</div>
<!-- //header -->
