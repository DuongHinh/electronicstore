@model ElectronicStore.Web.Models.FooterViewModel
<div class="row">
    <hr />
</div>
<!-- footer -->
<div class="footer">
    <div class="container">
        <div class="w3_footer_grids">
            <div class="col-md-3 w3_footer_grid">
                <h3>Liên hệ</h3>
                <ul class="address">
                    @if (@Model.ContactInfo.Address.LastIndexOf(",") != -1)
                    {
                        <li><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>@Model.ContactInfo.Address.Substring(0, @Model.ContactInfo.Address.LastIndexOf(",") + 1)<span>@Model.ContactInfo.Address.Substring(@Model.ContactInfo.Address.LastIndexOf(",") + 2, @Model.ContactInfo.Address.Length - @Model.ContactInfo.Address.Substring(0, @Model.ContactInfo.Address.LastIndexOf(",")).Length - 2)</span></li>
                    }
                    else
                    {
                        <li><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>@Model.ContactInfo.Address</li>
                    }
                   
                    <li><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i><a href="@Model.ContactInfo.Email">@Model.ContactInfo.Email</a></li>
                    <li><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>@Model.ContactInfo.PhoneNumber</li>
                </ul>
            </div>
            <div class="col-md-3 w3_footer_grid">
                <h3>Thông tin</h3>
                <ul class="info">
                    <li><a href="/contact-us">Liên hệ</a></li>
                    <li><a href="/">Giới thiệu</a></li>
                </ul>
            </div>
            <div class="col-md-3 w3_footer_grid">
                <h3>Danh mục</h3>
                <ul class="info">
                    @foreach (var category in Model.ProductCategories)
                    {
                        var url = "/" + category.Alias + ".pc-" + category.Id;
                        <li><a href="@url">@category.Name</a></li>
                    }
                </ul>
            </div>
            <div class="col-md-3 w3_footer_grid">
                <h3>Theo dõi</h3>
                <div class="agileits_social_button">
                    <ul>
                        <li><a href="#" class="facebook"> </a></li>
                        <li><a href="#" class="google"> </a></li>
                    </ul>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="footer-copy">
        <div class="footer-copy1">
            <div class="footer-copy-pos">
                <a href="#home1" class="scroll"><img src="/Assets/Client/images/arrow.png" alt="" class="img-responsive" /></a>
            </div>
        </div>
        <div class="container">
            <p>&copy; 2017 Electronic Store. All rights reserved | Design by <a href="http://w3layouts.com/">W3layouts</a></p>
        </div>
    </div>
</div>
