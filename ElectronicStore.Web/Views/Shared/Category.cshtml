@model IEnumerable<ElectronicStore.Web.Models.ProductCategoryViewModel>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products <b class="caret"></b></a>
    <ul class="dropdown-menu multi-column columns-3">
        <div class="row">
            @foreach (var category in Model.Where(x => x.ParentId == null))
            {
                var url = "/" + category.Alias + category.Id + ".html";
                var childCategories = Model.Where(x => x.ParentId == category.Id);
                <div class="col-sm-2">
                    <ul class="multi-column-dropdown">
                        <h6>@category.Name</h6>

                        @if (childCategories.Count() > 0)
                        {
                            foreach (var childCategory in childCategories)
                            {
                                var childUrl = "/" + childCategory.Alias + childCategory.Id + ".html";
                                <li><a href="@childUrl">@childCategory.Name</a></li>
                            }
                        }
                    </ul>
                </div>
            }

                
            <div class="col-sm-4 pull-right">
                <div class="w3ls_products_pos">
                    <h4>30%<i>Off/-</i></h4>
                    <img src="~/Assets/Client/images/1.jpg" alt=" " class="img-responsive" />
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </ul>
</li>
